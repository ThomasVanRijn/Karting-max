{% extends 'bezoeker.html.twig' %}

{% block menu %}
    <li><a href="{{ path('homepage') }}">home</a></li>
    <li><a href="{{ path('kartactiviteiten') }}">aanbod</a></li>
    <li><a href="{{ path('registreren') }}">registreren</a></li>
    <li><a href="#">contact</a></li>
{% endblock %}

{% block content %}
    {% if error %}
        <div class="alert alert-warning">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <h2>Inloggen</h2>

    <form class="form-horizontal" method="post">

        <div class="form-group">

            <label class="control-label col-sm-2" for="inputUsername">Inlognaam:</label>
            <div class="col-sm-6">
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
            </div>
        </div>

        <div class="form-group">

            <label class="control-label col-sm-2" for="inputPassword">Wachtwoord:</label>
            <div class="col-sm-6">
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>
        </div>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </div>

    </form>

{% endblock %}